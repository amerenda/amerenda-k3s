# Template for input_boolean helpers per room
# Usage:
#   jinja2 input_boolean_template.yaml.j2 -D room=bedroom > input_boolean/bedroom.yaml

{{ room }}_custom_schedule:
  name: {{ room|replace('_',' ')|title }} - Use custom schedule

